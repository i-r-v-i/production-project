{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      // esModuleInterop позволяет работать с пакетами, которые используют
      // 
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  }